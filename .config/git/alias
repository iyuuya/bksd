# vim: ft=gitconfig
[alias]
  a       = add
  b       = branch
  bd      = branch -D
  ba      = branch -a
  cl      = clone
  cm      = commit
  cmt     = commit --verbose
  cma     = commit --amend
  cnt     = shortlog -s -n
  co      = checkout
  d       = diff
  dc      = diff --cached
  dg      = diff --stat
  dp      = diff --stat -p
  dw      = diff --color-words -C
  ds      = diff --shortstat
  df      = diff --name-only
  f       = fetch
# fap     = fetch --all --prune
  fap     = "!zsh -c 'for re in `git remote`; do; git fetch $re &; done; wait'"
  filelog = log -u
  l       = log --graph --pretty=format:'%Cblue%h%Cred%d%Creset %Cgreen%an%Creset: %s %Cblue%ar%Creset'
  lg      = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
  lg2     = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
  m       = merge
  pl      = pull
  ps      = push
  pu      = push -u
  psf     = push -f
  re      = remote
  remy    = "!sh -c 'git remote add origin git@github.com:iyuuya/$(basename `pwd`).git'"
  rb      = rebase
  ra      = rebase --abort
  rc      = rebase --continue
  ri      = rebase -i
  rr      = rebase -i --root
  rs      = rebase --skip
  sm      = submodule
  st      = subtree
  stps    = subtree push
  stpl    = subtree pull
  stpsm   = "!sh -c 'git subtree push --prefix=$1 $1 master' -"
  sh      = show
  s       = status
  ss      = stash
  sd      = stash drop
  sp      = stash pop
  sl      = stash list
  sa      = stash apply
  uncmt   = reset --soft HEAD~
  unstage = reset HEAD
  rmunstg = clean -df
  rmunstglist = clean -dfn
  w       = commit -m wip
  wm      = "!sh -c 'git commit -m \"[wip] $0\"'"
  gf      = grep --no-line-number --full-name --name-only
  cfu     = config --get-regexp "^user"

  ff      = flow feauture
  fr      = flow release
  fh      = flow hotfix
  fs      = flow support
  hff     = hf feature
  hfr     = hf release
  hfh     = hf hotfix

  first-commit = "!sh -c 'git log --pretty=format:%H | tail -1'"
  pull-requests = "!sh -c 'git log --merges --oneline --ancestry-path HEAD...`git first` | grep \"Merge pull request #\"'"
  pls = pull-requests
