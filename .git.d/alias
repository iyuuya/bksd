# vim: ft=gitconfig
[alias]
  a       = add
  b       = branch
  bd      = branch -D
  cl      = clone
  cm      = commit
  cmt     = commit --verbose
  cma     = commit --amend
  cnt     = shortlog -s -n
  co      = checkout
  d       = diff
  dc      = diff --cached
  dg      = diff --stat
  dp      = diff --stat -p
  dw      = diff --color-words -C
  ds      = diff --shortstat
  f       = fetch
  filelog = log -u
  l       = log --graph --pretty=format:'%Cblue%h%Cred%d%Creset %Cgreen%an%Creset: %s %Cblue%ar%Creset'
  m       = merge
  pl      = pull
  ps      = push
  pu      = push -u
  psf     = push -f
  re      = remote
  rb      = rebase
  ra      = rebase --abort
  rc      = rebase --continue
  ri      = rebase -i
  rr      = rebase -i --root
  sm      = submodule
  st      = subtree
  sh      = show
  s       = status
  ss      = stash
  sd      = stash drop
  sp      = stash pop
  sl      = stash list
  sa      = stash apply
  uncmt   = reset --soft HEAD~
  unstage = reset HEAD
  w       = commit -m wip
  gf      = grep --no-line-number --full-name --name-only
