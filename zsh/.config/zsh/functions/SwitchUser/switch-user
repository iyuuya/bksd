if [ $# -ne 1 ]; then
  echo 'usage: switch-user USERNAME'
  return
fi

if [[ -s $HOME/.config/git/local.$1 ]]; then
  rm $HOME/.config/git/local
  ln -s $HOME/.config/git/local.$1 $HOME/.config/git/local
  echo 'configure git'
fi

if [[ -s $HOME/.ssh/config.$1 ]]; then
  rm $HOME/.ssh/config
  ln -s $HOME/.ssh/config.$1  $HOME/.ssh/config
  echo 'configure ssh'
fi

# vim: ft=zsh
